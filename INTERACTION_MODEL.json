{
    "id": "VideoExperienceFSM",
    "initial": "MutedInlineLoop",
    "states": {
      "MutedInlineLoop": {
        "description": "Autoplaying, muted, looped, playsInline background video. Menu closed.",
        "on": {
          "PLAY_WITH_SOUND": { "target": "FSWithSound", "actions": ["unmute", "enterFullscreen"] },
          "OPEN_MENU": { "target": "InlineMenuOpen", "actions": ["menuOpen"] }
        }
      },
      "FSWithSound": {
        "description": "Fullscreen, unmuted. Persistent CloseChip at top-right.",
        "onEntry": ["showCloseChip"],
        "on": {
          "CLOSE_FS": { "target": "MutedInlineLoop", "actions": ["exitFullscreen", "mute", "ensureInlineVisible"] },
          "ESC_KEY": { "target": "MutedInlineLoop", "actions": ["exitFullscreen", "mute"] }
        }
      },
      "InlineMenuOpen": {
        "description": "Right-side glass panel open; background video continues looping muted.",
        "onEntry": ["lockScroll", "trapFocus"],
        "on": {
          "CLOSE_MENU": { "target": "MutedInlineLoop", "actions": ["unlockScroll", "releaseFocus"] },
          "PLAY_WITH_SOUND": { "target": "FSWithSound", "actions": ["closeMenuIfOpen", "unmute", "enterFullscreen"] }
        }
      }
    }
  }